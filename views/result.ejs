<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download ID Card</title>
    <link rel="stylesheet" href="/css/result.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="display: flex;align-items: stretch;justify-content: center;min-height: 100vh;">

    <div style="background-color: white; padding-top: 60px;">
        <div class="cards" style="display: flex;align-items: center;justify-content: space-around;flex-wrap: nowrap;">

             <!-- frontside of the card -->
             <div class="card" id="frontpart" style="width: 400px;box-shadow: 2px 4px 12px 4px rgba(0, 0, 0, 0.5);border-radius: .5rem;padding: .25em;margin: 0 3em;height: 630px;">
                <!-- top image for college logo -->
                <div class="card-header" style="width:100%; display: flex;align-items: center;flex-wrap: wrap; padding-bottom: 20px; justify-content: space-around;margin: .5em auto;background: cornsilk;height: 100px;">
                    <img src="/nitt.png" alt="" width="100" height="100" class="image">
                    <h5>NATIONAL INSTITUTE OF TECHNOLOGY<br>
                    Tiruchirappalli - 620015, Tamilnadu, India<br>
                    (Under Ministry of Eduation, Govt. of India)<br>
                    INSTITUTE : +91-431-2503000<br>
                    Website : http://www.nitt.edu</h5>
                </div>
                <% let course_color = "brown"; %>
                <% if(student.Course === "UG"){ %>
                <%    course_color = "brown"; %>
                <% } else if(student.Course === "PG"){ %>
                <%    course_color = "blue"; %>
                <% } else if(student.Course === "PhD"){ %>
                <%    course_color = "green"; %>
                <% } %>
                
                <!-- the identity-card -->
                <div class="card-identity" 
                     style="margin: .75em auto 0;
                        background: <%= course_color %>;
                        color: white;
                        width: fit-content;
                        padding: .3em 1.5em;
                        border-radius: 1em;
                        text-transform: uppercase;
                        font-weight: bold;
                        font-size: 1.25rem;">
                    Student ID
                </div>
                
                <!-- now the image -->
                <div class="card-img" style="margin: 1em auto 0;
                width:200px;
                height:180px;
                padding-bottom: 5px;
                background: whitesmoke;">
                    <img src="data:<%= student.imagetype %>;charset=utf-8;base64,<%= student.image.toString('base64') %>" alt="student image" style="width: 100%;">
                </div>

                <!-- now the card details -->
                <div class="infos" style="display: flex;background: whitesmoke; padding-bottom: 10px; flex-direction: column;align-items: center;margin-top: 1.5em;">
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Name : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.Name %></div>

                    </div>
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Roll No : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.RollNo %></div>

                    </div>

                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Programme : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.Course %></div>

                    </div>

                    <% let course_batch = ""; %>
                    <% if(student.Course === "UG - B.Tech" || student.Course === "UG - B.Arch"){ %>
                    <%    course_batch = student.Batch+"-"+(parseInt(student.Batch)+4); %>
                    <% } else if(student.Course === "PhD"){ %>
                    <%    course_batch = student.Batch; %>
                    <% } else { %>
                    <%    course_batch = student.Batch+"-"+(parseInt(student.Batch)+3); %>
                    <% } %>
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Batch : </div>
                        <div class="info-value" style="justify-self: center;"><%=course_batch %></div>

                    </div>
                </div>

            </div>

            <div class="pagebreak"> </div>

            <!-- backside of the card -->
            <div class="card" id="backpart" style="width: 400px;box-shadow: 2px 4px 12px 4px rgba(0, 0, 0, 0.5);border-radius: .5rem;padding: .25em;margin: 0 3em;height: 630px;">
            <!-- top image for college logo -->
                <div class="card-header" style="width:100%; display: flex;align-items: center;flex-wrap: wrap; padding-bottom: 20px; justify-content: space-around;margin: .5em auto;background: cornsilk;height: 100px;">
                    <img src="/nitt.png" alt="" width="100" height="100" class="image">
                    <h5>NATIONAL INSTITUTE OF TECHNOLOGY<br>
                    Tiruchirappalli - 620015, Tamilnadu, India<br>
                    (Under Ministry of Eduation, Govt. of India)<br>
                    INSTITUTE : +91-431-2503000<br>
                    Website : http://www.nitt.edu</h5>
                </div>

                <!-- now the card details -->
                <div class="infos" style="display: flex;background: whitesmoke;padding-bottom: 10px; flex-direction: column;align-items: center;margin-top: 1.5em;">

                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Department : </div>
                        <div class="info-value" style="width:50%;justify-self: center;"><%=student.Department %></div>

                    </div>
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Email ID : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.Email %></div>
        
                    </div>
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Contact : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.ContactNo %></div>
        
                    </div>

                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Date Of Birth : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.DateOfBirth %></div>
        
                    </div>
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Blood Group : </div>
                        <div class="info-value" style="justify-self: center;"><%=student.BloodGroup %></div>
        
                    </div>
                    
                    <div class="info" style="display: flex;width:80%;font-size: 1.125rem;font-weight: bold;margin-top: 1em;">
                        
                        <div class="info-key" style="width:50%;justify-self: center;">Address : </div>
                        <div class="info-value" style="width:50%;justify-self: center;"><%=student.Address %></div>
        
                    </div>
                </div>

            </div>
        </div>

        <div id="print" style="display: flex;align-items: center;justify-content: center; padding-top: 50px;">
            <button value="front" class="print-btn" onClick="printPDF(this.value)" ><i class="fa fa-download"></i>Print ID Card</button>
        </div>

        <!--
        <div id="print" style="display: flex;align-items: center;justify-content: space-between; padding-top: 50px; padding-left: 150px;padding-right: 150px;">
            <button value="front" class="print-btn" onClick="printPDF(this.value)" ><i class="fa fa-download"></i>Print ID Card</button>
            <button value="back" class="print-btn" onClick="printPDF(this.value)"><i class="fa fa-download"></i>Back ID Card</button>
        </div> -->
    </div>  
    <script>
        function printPDF (value) {

            document.getElementById('print').style.visibility='hidden';
            /*if(value === "front")
            document.getElementById('backpart').style.visibility='hidden';
            if(value === "back")
            document.getElementById('frontpart').style.visibility='hidden';*/

            window.print();

            document.getElementById('print').style.visibility = 'visible'
            document.getElementById('backpart').style.visibility='visible';
            document.getElementById('frontpart').style.visibility='visible'
        }
    </script>
</body>
</html>
